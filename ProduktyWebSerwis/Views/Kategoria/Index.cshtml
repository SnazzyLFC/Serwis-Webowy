@model IEnumerable<ProduktyWebSerwis.Models.Kategoria>

@{
    ViewBag.Title = "Index";
}

<h2>Lista kategorii</h2>

<p>
    @Html.ActionLink("Dodaj nową kategorię", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", null, new {@class = "btn btn-warning"})
            @Html.ActionLink("Szczegóły", "Details", null, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Usuń", "Delete", null, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
